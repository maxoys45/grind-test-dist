<div class="my-4 my-sm-5 container container-smaller">

    {% include 'page-title', title: 'Create Account' %}

    {% form 'create_customer' %}

        {% for field in form.errors %}
            {% if field == 'form' %}
                <div class="alert alert-danger" role="alert">
                    {{ form.errors.messages[field] }}
                </div>
            {% else %}
                <div class="alert alert-danger" role="alert">
                    {{ form.errors.translated_fields[field] }} - {{ form.errors.messages[field] }}
                </div>
            {% endif %}
        {% endfor %}

        <div class="row half-gutters">
            <div class="col-12 col-sm-6 mb-3">
                <input type="text" name="customer[first_name]" id="FirstName" placeholder="{{ 'customer.register.first_name' | t }}" autofocus {% if form.first_name %}value="{{ form.first_name }}"{% endif %} class="form-control">
            </div>
            <div class="col-12 col-sm-6 mb-3">
                <input type="text" name="customer[last_name]" id="LastName" placeholder="{{ 'customer.register.last_name' | t }}" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} class="form-control">
            </div>
            <div class="col-12 mb-3">
                <input type="email" name="customer[email]" id="Email" class="{% if form.errors contains 'email' %}input-error{% endif %} form-control" placeholder="{{ 'customer.register.email' | t }}" value="{% if form.email %}{{ form.email }}{% endif %}" spellcheck="false" autocomplete="off" autocapitalize="off">
            </div>
            <div class="col-12 mb-3">
                <input type="password" name="customer[password]" id="CreatePassword" class="{% if form.errors contains 'password' %}input-error{% endif %} form-control" placeholder="{{ 'customer.register.password' | t }}">
            </div>
            <div class="col-12">
                <input type="submit" value="{{ 'customer.register.submit' | t }}" class="btn btn-block btn-primary">
            </div>
            <div class="mt-3 mt-md-4 col-12">
                <p class="mb-0 text-center"><a href="{{ shop.url }}" class="text-black-50">{{ 'customer.register.cancel' | t }}</a></p>
            </div>
        </div>

    {% endform %}

</div>

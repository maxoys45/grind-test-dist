<section class="campaign-bottom-cta" style="background-color: {{ options.background_color }};">
    <div class="py-5 my-md-0 py-lg-5 container">
        <div class="row">
            <div class="col-12 col-md-6 d-flex align-items-center">
                <div>
                    <h1>{{ options.title }}</h1>
                    <h4 class="mt-3">{{ options.content_body }}</h4>
                    <a class="gkit-btn-lg gkit-primary mt-4 gkit-btn-superwide" href="{{ options.link }}">{{ options.button_text }}</a>
                </div>
            </div>
            <div class="col-12 col-md-6 mt-4 mt-md-0">
                <div class="img-container">
                    <img loading="lazy" class="img" src="{{ options.image | img_url: 'master' }}" />
                </div>
            </div>
        </div>
    </div>
</section>
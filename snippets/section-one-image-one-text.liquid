{% assign image = section.settings.imageOneSelect %}
{% assign text = section.settings.textOne %}

<div class="my-4 my-sm-5 container">
    <div class="row">

        {% unless image == blank %}
            <div class="col-12 col-md-4 col-lg-5 mr-md-auto content-no-margin wow fadeInUp">
                <figure class="d-block mb-4 mb-sm-5 mb-md-0 figure">
                    <img loading="lazy" src="{{ image | img_url: '600x600', crop: 'center' }}" alt="{{ image.alt }}" class="d-block mb-0 figure-img img-fluid breakout">
                </figure>
            </div>
        {% endunless %}

        {% unless text == blank %}
            <div class="col-12 col-md-7 col-lg-6 content-no-margin wow fadeInUp" data-wow-delay=".1s">
                {{ text }}
            </div>
        {% endunless %}

    </div>
</div>

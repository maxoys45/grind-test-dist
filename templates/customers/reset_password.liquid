<div class="my-4 my-sm-5 container container-smaller">

    {% include 'page-title', title: 'Reset Your Password' %}
    <p class="text-center">{{ 'customer.reset_password.subtext' | t: email: email }}</p>

    <div class="form-reset-password">
      {% form 'reset_customer_password' %}

        {{ form.errors | default_errors }}

        <div class="row half-gutters">
            <div class="d-flex align-items-center mb-3 mb-md-0 col-12 col-md-5">
                <input type="password"
                       name="customer[password]"
                       id="ResetPassword"
                       class="form-control {% if form.errors contains 'password' %}input-error{% endif %}"
                       placeholder="{{ 'customer.reset_password.password' | t }}">
            </div>

            <div class="d-flex align-items-center mb-3 mb-md-0 col-12 col-md-5">
                <input type="password"
                       name="customer[password_confirmation]"
                       id="PasswordConfirmation"
                       class="form-control {% if form.errors contains 'password_confirmation' %}input-error{% endif %}"
                       placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
            </div>

            <div class="col-12 col-md-2">
                <input type="submit" class="btn btn-primary" value="{{ 'customer.reset_password.submit' | t }}">
            </div>
        </div>

      {% endform %}
    </div>

</div>

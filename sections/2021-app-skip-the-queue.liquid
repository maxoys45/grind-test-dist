{%- liquid
  assign image = section.settings.image
  assign imageMobile = section.settings.imageMobile
  assign title = section.settings.title
  assign description = section.settings.description
  assign blackCardDescription = section.settings.blackCardDescription
  assign iosLink = section.settings.iosLink
  assign iosImage = section.settings.iosImage
  assign androidLink = section.settings.androidLink
  assign androidImage = section.settings.androidImage
  assign blackCardImage = section.settings.blackCardImage
-%}

<section class="container px-0 position-relative mt-4 mb-5">
  <!-- Desktop Background -->
  <div class="app-skip-the-queue_background-image d-none d-md-block" style="z-index: -1; background: url('{{ image.src | img_url: "1200x1200" }}'); background-repeat: no-repeat; background-size: cover;"></div>
  <!-- Gradient Filter -->
  <div class="app-skip-the-queue_background-filter d-none d-md-block" style="top: 12.25%; height: 87.75%; z-index: 0; background: linear-gradient(101.06deg, rgba(45, 41, 38, 0.9) 0.41%, rgba(45, 41, 38, 0) 81.41%);"></div>
  <!-- Mobile Background -->
  <div class="d-md-none p-3">
    <img class="w-100" src="{{ imageMobile | img_url: "1200x1200"}}" alt="app preview" style="object-fit: cover;"/>
  </div>
  <div class="app-skip-the-queue_container row">
    <div class="col-12 col-md-9">
      <div class="app-skip-the-queue_content text-center text-md-left">
        <h1 class="d-none d-md-block gkit-h0 text-white wow fadeInUp" data-wow-delay=".25s">{{ title }}</h1>
        <h1 class="d-md-none gkit-h1 mt-0 wow fadeInUp" data-wow-delay=".25s">{{ title }}</h1>
        <p class="d-none d-md-block gkit-p-24 gkit-bold text-white wow fadeInUp" style="max-width: 655px;" data-wow-delay=".5s">{{ description }}</p>
        <p class="d-md-none gkit-p-20 wow fadeInUp" data-wow-delay=".5s" style="font-weight: 500;">{{ description }}</p>
        <div class="row pt-2 pb-4 wow fadeInUp" data-wow-delay=".75s">
          <div class="col-12 col-md-auto mb-3">
            <a href="{{ iosLink }}">
              <img src="{{ iosImage | img_url: "400x400"}}" alt="ios button" style="height: 40px; object-fit: contain;"/>
            </a>
          </div>
          <div class="col-12 col-md-auto mb-3">
            <a href="{{ androidLink }}">
              <img src="{{ androidImage | img_url: "400x400"}}" alt="android button" style="height: 40px; object-fit: contain;"/>
            </a>
          </div>
        </div>
        <div class="d-none d-md-inline-block wow fadeInUp" data-wow-delay="1s">
          <div class="app-skip-the-queue_black-card-container py-2 px-4">
            <img src="{{ blackCardImage | img_url: "400x400"}}" class="app-skip-the-queue_black-card" alt="black card" />
            <p class="gkit-p-20 mb-0 app-skip-the-queue_black-card-text" style="font-weight: 500;">{{ blackCardDescription }}</p>
            <span class="app-skip-the-queue_black-card-star">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">

{% assign backgroundColor = section.settings.backgroundColor %} {% assign
iconSize = section.settings.iconSize %} {% assign title = section.settings.title
%} {% assign imageP1 = section.settings.imageP1 %} {% assign imageP2 =
section.settings.imageP2 %} {% assign imageP3 = section.settings.imageP3 %} {%
assign headerP1 = section.settings.headerP1 %} {% assign headerP2 =
section.settings.headerP2 %} {% assign headerP3 = section.settings.headerP3 %}
{% assign subheaderP1 = section.settings.subheaderP1 %} {% assign subheaderP2 =

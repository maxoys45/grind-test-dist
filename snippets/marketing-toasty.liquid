{% if options.popup_enabled == true %}
<div id="marketing-toasty" tabindex="-1">
  <div class="modal-dialog" class="wow fadeInUp" role="document">
    <div class="modal-content" style="flex: 1; flex-direction: row">
      <div
        class="p-3 d-none d-md-block"
        style="background-color: {{ options.background_color }}"
      >
        <!-- <img loading="lazy" class="email-icon" src="{{ 'icon-email.svg' | asset_url }}" /> -->
        <div class="email-animation"></div>
      </div>
      <div class="modal-body">
        <button
          id="marketing-toasty-close"
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <img loading="lazy" src="{{ 'close.svg' | asset_url }}" />
        </button>
        <h3 class="content-title">{{ options.title_text }}</h3>
        <p class="content-body">{{ options.body_text }}</p>
        {% render 'newsletter-signup-field' %}
      </div>
    </div>
  </div>
</div>

<script
  defer
  src="//cdnjs.cloudflare.com/ajax/libs/bodymovin/5.6.10/lottie.min.js"
  type="text/javascript"
></script>
<script type="text/javascript">
  (function ($) {
    lottie.loadAnimation({
      container: $("#marketing-toasty .email-animation")[0],
      renderer: "svg",
      loop: false,
      autoplay: true,
      path: "{{ 'lottie-email.json' | asset_url }}",
    });

    $("#marketing-toasty-close").on("click", function () {
      $("#marketing-toasty").addClass("hide-animation");
    });

    $(document).on("submit", "form.newsletter-signup-field", function () {
      $("#marketing-toasty").addClass("hide-animation");
    });
  })(jQuery);
</script>
{% endif %}

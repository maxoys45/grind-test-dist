<div
  id="shopify-section-section-positives-product"
  class="{{ mdSection }} {{ mdClass }}"
>
  <section
    class="container-fluid"
    style="background-color: {{ backgroundColor }}"
  >
    <div class="container section-2020-positives d-flex">
      <h2 class="gkit-h2">{{ title }}</h2>
    </div>
    <div class="container section-2020-positives d-flex">
      <div class="positive-point d-flex">
        <img loading="lazy" src="{{ imageP1 | img_url: "200x" }}" width="{{
          iconSize
        }}" height="{{ iconSize }}" style="width: {{ iconSize }}px" />
        <div class="point-content">
          <h3 class="gkit-p-17 gkit-bold">{{ headerP1 }}</h3>
          <p class="gkit-p-13 gkit-regular subtitle">{{ subheaderP1 }}</p>
        </div>
      </div>

      <div class="positive-point d-flex">
        <img loading="lazy" src="{{ imageP2 | img_url: "200x" }}" width="{{
          iconSize
        }}" height="{{ iconSize }}" style="width: {{ iconSize }}px" />
        <div class="point-content">
          <h3 class="gkit-p-17 gkit-bold">{{ headerP2 }}</h3>
          <p class="gkit-p-13 gkit-regular subtitle">{{ subheaderP2 }}</p>
        </div>
      </div>

      <div class="positive-point d-flex">
        <img loading="lazy" src="{{ imageP3 | img_url: "200x" }}" width="{{
          iconSize
        }}" height="{{ iconSize }}" style="width: {{ iconSize }}px" />
        <div class="point-content">
          <h3 class="gkit-p-17 gkit-bold">{{ headerP3 }}</h3>
          <p class="gkit-p-13 gkit-regular subtitle">{{ subheaderP3 }}</p>
        </div>
      </div>
    </div>
  </section>
</div>
{% endunless %}

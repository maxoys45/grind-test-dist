{% include 'masthead-collections' %}

{% schema %}
    {
    "name": "Gift Collection Masthead",
    "max_blocks": 3,
    "settings": [
    {
    "type": "text",
    "id": "title",
    "label": "Heading"
    },
    {
    "type": "richtext",
    "id": "summary",
    "label": "Summary"
    },
    {
    "type":      "range",
    "id":        "iconWidth",
    "min":       18,
    "max":        50,
    "step":       1,
    "unit":       "px",
    "label":     "Icon Width",
    "default":   24
    }
    ],
    "blocks": [
    {
    "type": "information",
    "name": "Information Block",
    "settings": [
    {
    "type": "image_picker",
    "id": "image",
    "label": "Image"
    },
    {
    "type": "text",
    "id": "text",
    "label": "Information Text"
    }
    ]
    }
    ]
    }
{% endschema %}
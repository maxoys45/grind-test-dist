{% render 'render-var-text-image', options: section.settings %}

{% schema %}
{
  "name": "Campaign Image + Text",
  "settings": [
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "checkbox",
      "id": "reverse",
      "label": "Reverse Order Of Image & Text",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "fullwidth",
      "label": "Full-width Block",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "doubleRowGutter",
      "label": "Increase Image & Text Gap",
      "default": false
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Colour",
      "default": "#fff"
    },
    {
      "type": "select",
      "id": "gradient",
      "label": "Gradient?",
      "options": [
        { "value": "no", "label": "No gradient" },
        { "value": "top-to-bottom", "label": "Top to bottom" },
        { "value": "bottom-to-top", "label": "Bottom-to-top" }
      ],
      "default": "no"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "imageWidth",
      "label": "Image Width",
      "options": [
        {
          "value": "6",
          "label": "Half"
        },
        {
          "value": "4",
          "label": "One Third"
        },
        {
          "value": "3",
          "label": "Quarter"
        }
      ],
      "default": "6"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "select",
      "id": "verticalAlignment",
      "label": "Content Vertical Alignment",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "checkbox",
      "id": "larger_title",
      "label": "Larger title?",
      "default": true
    },
    {
      "type": "select",
      "id": "titlePosition",
      "label": "Title Position",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        },
        {
          "value": "left",
          "label": "Left"
        }
      ],
      "default": "center"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "select",
      "id": "textPosition",
      "label": "Text Position",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        },
        {
          "value": "left",
          "label": "Left"
        }
      ],
      "default": "center"
    },
    {
      "type": "text",
      "id": "btnText",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "btnLink",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "btnPosition",
      "label": "Button Position",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        },
        {
          "value": "left",
          "label": "Left"
        }
      ],
      "default": "center"
    }
  ],
  "presets": [
    {
      "name": "Campaign Image + Text"
    }
  ]
}
{% endschema %}
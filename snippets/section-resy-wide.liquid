{% assign resyVenueId = section.settings.resyVenueId %}
{% assign resyApiKey = section.settings.resyApiKey %}

{% if resyVenueId != blank and resyApiKey != blank %}
    <div class="mb-4 mb-md-0 pb-4 pb-md-5 opentable opentable-wide">
        <div class="container">
            <form>
                <div class="row justify-content-center align-items-center">

                    <div class="col-12 col-md-4">
                        <div class="form-custom-select">
                            <input type="text"
                                   autocomplete="false"
                                   class="mb-4 mb-md-0 gkit-select-md js-form-custom-select"
                                   data-toggle="datepicker"
                                   id="resyWideDate"
                                   name="resDate"
                                   placeholder="Select a date"
                                   readonly
                                   required>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="form-custom-select">
                            <select class="mb-4 mb-md-0 gkit-select-md js-form-custom-select"
                                    id="resyWideSeats"
                                    required>
                                <option value="" selected disabled hidden>Number of guests</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                                <option value="11">11</option>
                            </select>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <input class="gkit-btn-md gkit-primary btn-block"
                               onClick='resyWideSubmit()'
                               type="button"
                               value="Book a Table">
                    </div>

                </div>
            </form>
        </div>
    </div>

    <script type="text/javascript">
        function resyWideSubmit() {
            var resDate = document.getElementById('resyWideDate').value;
            var resSeats = document.getElementById('resyWideSeats').value;
            resyWidget.openModal({'venueId': {{ resyVenueId }}, 'apiKey': '{{ resyApiKey }}', 'date': resDate, 'seats': resSeats});
        }
    </script>

{% endif %}

{% assign testimonialImage = section.settings.testimonialImage %}

<div class="my-4 pb-4 my-sm-5 container">
    <blockquote class="mb-0 blockquote blockquote-branded blockquote-simple">

        {% unless testimonialImage == blank %}
            <div class="wow fadeInUp">
                <img loading="lazy" src="{{ testimonialImage | img_url: '1200x720', crop: 'center' }}" alt="{{ testimonialImage.alt }}" class="breakout image">
            </div>
        {% endunless %}

        <div class="bg-primary p-4 blockquote-content wow fadeInUp" data-wow-delay=".1s">
            <p class="mb-0 font-italic small sub-title">{{ section.settings.testimonialSubTitle }}</p>
            <p class="mt-3 mb-5 gkit-blockquote">"{{ section.settings.testimonialQuote }}"</p>
            <footer class="gkit-p-15"><strong>{{ section.settings.testimonialSource }}</strong></footer>
        </div>

    </blockquote>
</div>

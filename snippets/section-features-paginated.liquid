<div class="my-4 my-sm-5 container">

    {% paginate blogs.features.articles by 36 %}
        <div class="row">

            {% for article in blogs.features.articles %}
                <div class="mb-5 col-12 col-md-6 wow fadeInUp" data-wow-delay="0.{{ forloop.index }}s">
                    {% include 'excerpt-feature',
                        excerpt: article.excerpt,
                        thumbnail: article.image,
                        title: article.title,
                        url: article.url
                    %}
                </div>
            {% endfor %}

            {% if paginate.pages > 1 %}
                <div class="col-12 wow fadeInUp">
                    {% include 'pagination' %}
                </div>
            {% endif %}

        </div>
    {% endpaginate %}

</div>
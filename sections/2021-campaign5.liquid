{% for block in section.blocks %}
    {% case block.type %}
    {% when 'campaign-cta' %}
        {% render 'campaign-cta', options: block.settings %}
    {% when 'render-var-text-image' %}
        {% render 'render-var-text-image', options: block.settings %}
    {% when 'render-3-positives' %}
        {% render 'render-3-positives', options: block.settings %}
    {% when 'render-4-selling-points' %}
        {% render 'render-4-selling', options: block.settings %}
    {% when 'campaign-bottom-cta' %}
        {% render 'campaign-bottom-cta', options: block.settings %}
    {% when 'campaign-featured-product' %}
